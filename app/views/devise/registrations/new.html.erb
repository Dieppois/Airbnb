<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 border-1 border-gray-300 sm:rounded-lg sm:px-12">
      <div class="flex justify-center items-center mb-10">
        <%= render "shared/logo", locals: {class:"w-full justify-center mx-auto"} %>
      </div>
      <h2 class="mb-6 text-center text-2xl font-medium leading-9 tracking-tight text-gray-900">Bienvenue, connecte-toi à ton compte</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <div>
            <%= f.label :Email, class:"block text-sm font-medium leading-6 text-gray-900" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 px-4 block w-full rounded-md border-0 py-3 text-gray-900 ring-1 ring-gray-300 focus:ring-2 focus:ring-gray-800 focus:outline-none focus:ring-inset placeholder:text-gray-400 sm:text-sm sm:leading-6" %>
            <%# Fonction message d'erreur dans l'application Helper %>
            <%= field_error_messages(resource, :email) %>
          </div>

          <div>
            <%= f.label :Mots_de_passe, class:"block text-sm font-medium leading-6 text-gray-900" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "mt-2 px-4 block w-full rounded-md border-0 py-3 text-gray-900 ring-1 ring-gray-300 focus:ring-2 focus:ring-gray-800 focus:outline-none focus:ring-inset placeholder:text-gray-400 sm:text-sm sm:leading-6" %>
            <%# Fonction dans l'application Helper %>
            <%= field_error_messages(resource, :password) %>
          </div>

          <div>
            <%= f.label :Confirmation, class:"block text-sm font-medium leading-6 text-gray-900" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-2 px-4 block w-full rounded-md border-0 py-3 text-gray-900 ring-1 ring-gray-300 focus:ring-2 focus:ring-gray-800 focus:outline-none focus:ring-inset placeholder:text-gray-400 sm:text-sm sm:leading-6" %>
            <%# Fonction dans l'application Helper %>
            <%= field_error_messages(resource, :password_confirmation) %>
          </div>

          <div class="mt-6">
            <%= f.submit "S'inscrire", class:"flex w-full justify-center rounded-md bg-primary px-3 py-3 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary" %>
          </div>
        <% end %>
      </div>

      <p class="mt-6 text-center text-sm text-gray-500">
        Déjà membre ?
        <%= link_to "Se connecter", new_session_path(resource_name), class:"font-semibold leading-6 text-primary hover:text-primary-dark" %>
      </p>
  </div>
</div>
