<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 border-1 border-gray-300 sm:rounded-lg sm:px-12">
      <div class="flex justify-center items-center mb-10">
        <%= render "shared/logo", locals: {class:"w-full justify-center mx-auto"} %>
      </div>
      <h2 class="mb-6 text-center text-2xl font-medium leading-9 tracking-tight text-gray-900">Accède à ton espace personnel</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <div>
            <%= f.label :Email, class:"block text-sm font-medium leading-6 text-gray-900" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 px-4 block w-full rounded-md border-0 py-3 text-gray-900 ring-1 ring-gray-300 focus:ring-2 focus:ring-gray-800 focus:outline-none focus:ring-inset placeholder:text-gray-400 sm:text-sm sm:leading-6" %>
          </div>

          <div>
            <%= f.label :Mots_de_passe, class:"block text-sm font-medium leading-6 text-gray-900" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "mt-2 px-4 block w-full rounded-md border-0 py-3 text-gray-900 ring-1 ring-gray-300 focus:ring-2 focus:ring-gray-800 focus:outline-none focus:ring-inset placeholder:text-gray-400 sm:text-sm sm:leading-6" %>
          </div>

          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <%= f.check_box :remember_me, class:"h-4 w-4 rounded border-gray-300 text-gray-900 focus:ring-gray-900", type:"checkbox" %>
                <%= f.label :remember_me, class:"ml-3 block text-sm leading-6 text-gray-900" %>
              </div>
            <% end %>

          <div class="text-sm leading-6">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class:"font-semibold text-primary hover:text-primary-dark" %>
          </div>
        </div>

          <div class="mt-6">
            <%= f.submit "Se connecter", class:"flex w-full justify-center rounded-md bg-primary px-3 py-3 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary" %>
          </div>
        <% end %>
      </div>

      <p class="mt-6 text-center text-sm text-gray-500">
        <%= link_to "S'inscrire", new_registration_path(resource_name), class:"font-semibold leading-6 text-primary hover:text-primary-dark" %>
      </p>
  </div>
</div>
